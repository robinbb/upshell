export UPSHELL="$HOME"/.upshell

go="$UPSHELL"/bin/dispatch
UPSHELL_PHASE=pre-login.sh . "$go"
UPSHELL_PHASE=login.sh     . "$go"

# Source .bashrc only if this is an interactive shell.
[ "$PS1" ] && [ -r ~/.bashrc ] && . ~/.bashrc

UPSHELL_PHASE=post-login.sh . "$go"
