phase="$UPSHELL_PHASE"
config_dir=~/.upshell/config

upshell_source() {
   echo "Sourcing $1"
   . "$1"
}

for dir in "/hosts/$HOSTNAME/$USER" \
           "/users/$USER/$HOSTNAME" \
           "/hosts/$HOSTNAME"       \
           "/users/$USER"           \
           "" ; do
   dir="$config_dir$dir"
   script="$dir"/$phase
   if [ -r "$script" ] ; then
      upshell_source "$script"
   fi
done

for dir in "$config_dir"/modules/*/ ; do
   echo "$dir"
   [ -d "$dir" ] || continue
   script="$dir"$phase
   if [ -r $script ] ; then
      upshell_source "$script"
   fi
done

unset -v config_dir phase
