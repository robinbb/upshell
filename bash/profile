export UPSHELL="$HOME"/.upshell
upshell_exit_handlers=()
upshell_invoke_exit_handlers() {
   local i
   for i in "${upshell_exit_handlers[@]}" ; do
      eval $i
   done
}
upshell_on_exit() {
   upshell_exit_handlers=("$*" "${upshell_exit_handlers[@]}")
}
trap upshell_invoke_exit_handlers EXIT

if [ -d "$UPSHELL" ] ; then
   UPSHELL_PHASE=pre-login.bash  . "$UPSHELL"/bin/dispatch
   UPSHELL_PHASE=login.bash      . "$UPSHELL"/bin/dispatch
   [ -r ~/.profile ] && . ~/.profile
   UPSHELL_PHASE=post-login.bash . "$UPSHELL"/bin/dispatch
else
   echo "Upshell must be installed in the $UPSHELL directory." \
        "Exiting."
   exit 1
fi
